
<% if @note.errors.any? %>
<h2> The following errors prevented the note from getting created </h2>
    <ul>
        <% @note.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
        <% end %>
    </ul>
<% end %>

<%= form_for @note do |f| %>
    <p>
        <%= f.label :title %></br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %></br>
        <%= f.text_area :description %>
    </p>
    <p> 
        <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back To  Note listing', notes_path %>
